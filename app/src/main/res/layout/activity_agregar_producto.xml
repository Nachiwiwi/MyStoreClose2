<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    tools:context=".AgregarProducto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="147dp"
        android:layout_height="0dp"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="12dp"
        android:text="Formulario Nuevo Producto"
        android:textAlignment="center"
        android:textColor="#EEEEEE"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textoPlanoNombreProducto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textoPlanoPrecioProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorBoton1"
        android:ems="10"
        android:hint="Precio"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textoPlanoDescripcionProducto"
        app:layout_constraintStart_toStartOf="@+id/textoPlanoNombreProducto"
        app:layout_constraintTop_toBottomOf="@+id/textoPlanoNombreProducto" />

    <EditText
        android:id="@+id/textoPlanoDescripcionProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorBoton1"
        android:ems="10"
        android:hint="DescripciÃ³n"
        android:inputType="textPersonName"
        android:minHeight="70dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/botonSubirImagen"
        app:layout_constraintStart_toStartOf="@+id/textoPlanoPrecioProducto"
        app:layout_constraintTop_toBottomOf="@+id/textoPlanoPrecioProducto" />

    <ImageButton
        android:id="@+id/botonSubirImagen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="23dp"
        android:contentDescription="Subir Imagen"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textoSubirImagen"
        app:layout_constraintTop_toBottomOf="@+id/textoPlanoDescripcionProducto"
        app:srcCompat="@android:drawable/stat_sys_upload" />

    <EditText
        android:id="@+id/textoPlanoNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorBoton1"
        android:backgroundTint="@color/colorBoton1"
        android:ems="10"
        android:hint="Nombre del producto"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textoPlanoPrecioProducto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/botonAgregarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/colorBoton2"
        android:minHeight="48dp"
        android:text="@string/agregarProducto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/botonAgregarProducto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonSubirImagen"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/textoSubirImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        android:text="Subir Imagen"
        android:textColor="#EEEEEE"
        app:layout_constraintEnd_toStartOf="@+id/botonSubirImagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/botonSubirImagen" />

    <ImageButton
        android:id="@+id/botonVolverPantalla8"
        android:layout_width="84dp"
        android:layout_height="67dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="Volver"
        app:layout_constraintBottom_toTopOf="@+id/textoPlanoNombreProducto"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:srcCompat="?attr/actionModeCloseDrawable" />

</androidx.constraintlayout.widget.ConstraintLayout>